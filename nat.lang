module Numbers::Nat

import Numbers

variant Nat {
    Zero
    Succ(Nat)

    fun add(this, that : Nat) : Nat = match that {
        Zero    : this
        Succ(n) : Nat::Succ(this.add(n))
    }

    fun mul(this, that : Nat) : Nat = match that {
        Zero    : Nat::Zero
        Succ(n) : this.add(this.mul(n))
    }
}

fun inc(n : Nat) : Nat = (
    Numbers::zero
    Nat::Succ(n)
)